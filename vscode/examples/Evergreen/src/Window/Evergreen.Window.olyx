#target "dotnet: net7"
#library

#load "*.oly"

#reference "../../../core/prelude.olyx"
#package "TerraFX.Interop.Windows,10.0.22621.1"

namespace Evergreen.Window

interface IWindow =
    inherits System.IDisposable

    Title: string get
    HWND: nint get
    HINSTANCE: nint get
    IsClosed: bool get
    IsHidden: bool get

    Width: uint32 get
    Height: uint32 get

    Show(): ()
    Hide(): ()
    PumpEvents(): InputSnapshot
    Minimize(): ()

    static CreateWin32(title: string): IWindow =
        Win32Window(title)